<MudContainer Style="height:150px" Class="d-flex align-item">
    <MudContainer Class="mud-height-full d-flex justify-center align-center"> 
        <MudText Typo="Typo.h4" Style="font-weight:700">@title</MudText>
    </MudContainer>
    <MudContainer Class="mud-height-full d-flex justify-end align-center">
        <MudText Typo="Typo.h4" Style="font-weight:500">@figure</MudText>
        <MudText Typo="Typo.h3" Style="font-weight:500" Class="mx-10">|</MudText>
        <MudText Typo="Typo.h4" Style="font-weight:500">@difference</MudText>
    </MudContainer>
</MudContainer>

@code {
    [Parameter]
    public string? title{ get; set; }


    [Parameter]
    public string? figure{ get; set; }

    [Parameter]
    public string? difference{ get; set; }


}
