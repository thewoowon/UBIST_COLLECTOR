@using UBIST_COLLECTOR.Shared;


<MudContainer Class="mud-width-full" MaxWidth="MaxWidth.ExtraLarge">
    <SubTitleComponent title=@title detail="true"></SubTitleComponent>
</MudContainer>
<MudGrid Spacing="3" Justify="Justify.Center">
    <MudItem>
        <MudFourInstanceComponent title="데이터 수집률" figure="97.6%"></MudFourInstanceComponent>
    </MudItem>
    <MudItem>
        <MudFourInstanceComponent title="수집/미수신/미수집 패널 수" figure="4500/10/12"></MudFourInstanceComponent>
    </MudItem>
    <MudItem>
        <MudFourInstanceComponent title="데이터 수집 건수" figure="1,324,528"></MudFourInstanceComponent>
    </MudItem>
    <MudItem>
        <MudFourInstanceComponent title="처방전 수" figure="424,528"></MudFourInstanceComponent>
    </MudItem>
</MudGrid>

@code {
    [Parameter]
    public string? sequence{get;set;}

    public string title = @DateTime.Now.ToString("yyyy년 MM월") + " 비정기 수집_";

    protected override void OnParametersSet()
    {
        title = title +  sequence + @DateTime.Now.ToString("yyyy년 MM월 dd일") + " ~ " + @DateTime.Now.ToString("yyyy년 MM월 dd일");
    }
}
