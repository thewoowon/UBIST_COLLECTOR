
<MudPaper Class="mud-pager-res-three mud-pager-hover" MinWidth="400px" Height="250px" MaxWidth="600px"  Elevation="5">    
    <MudPaper Class="wing-decoration-1"></MudPaper>
    <MudPaper Class="wing-decoration-2"></MudPaper>
    <MudPaper Class="wing-decoration-3"></MudPaper>
    <MudContainer Class="pt-10 pl-16" Style="height:80px;">
        <MudText Typo="Typo.h4" Style="font-weight:700">@title</MudText>
    </MudContainer>
    <MudContainer Class="d-flex justify-center align-center">
        <MudText Typo="Typo.h2" Style="font-weight:700">@figure</MudText>
    </MudContainer>
    <MudContainer Class="d-flex justify-center align-center">
        <MudText Typo="Typo.h5">Source : @amount</MudText>
    </MudContainer>
</MudPaper>

@code {
    [Parameter]
    public string? title{ get; set; }

    [Parameter]
    public string? figure{ get; set; }

    [Parameter]
    public string? amount{ get; set; }


}
